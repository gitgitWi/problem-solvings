{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "importsNotUsedAsValues": "remove",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@problems/*": ["./problems/*"],
      "@utils/*": ["./utils/*"],
      "@/*": ["./*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["index.ts", "problems", "utils"],
  "exclude": ["dist"]
}
